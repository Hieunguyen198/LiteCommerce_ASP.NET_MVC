<!-- Modal edit info-->
<div class="modal fade" id="editInfo">
    <div class="modal-dialog">
        <div class="modal-content" style="width: 700px">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Update profile</h4>
            </div>
            <div class="modal-body">
                <form method="POST" action="~/Account/input" enctype="multipart/form-data">
                    <input type="hidden" name="employeeID" value="1" />
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>First Name</label> <input type="text"
                                                             class="text form-control" placeholder="Firstname" required
                                                             name="firstName" value="Hieu">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Last Name</label> <input type="text"
                                                            class="text form-control" placeholder="Last name" required
                                                            name="lastName" value="Nguyen">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Name title </label> <input type="text"
                                                              class="text form-control" placeholder="Ex: Manage person" required
                                                              name="title" value="Dev">
                        </div>
                    </div>
                    <input type="hidden"
                           class="text form-control" name="photoPath" value="~/Images/Cat1.jpg">
                    <div class="col-sm-6" style="display:flex">
                        <div class="form-group">
                            <label>Photo Path</label> <input type="file" id="my_input_file"
                                                             class="text form-control" placeholder="Photo path"
                                                             name="uploadPhoto">
                        </div>
                        <div>
                            <img class="profile-user-img img-responsive img-circle" id="showThumb" src="~/Images/Cat1.jpg" alt="User profile picture">
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label>E-mail</label><i class="text-danger"> </i>
                            <input type="email"
                                   class="text form-control" placeholder="Ex: abc@gmail.com" required
                                   name="email" value="Hieu@gmail.com">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Birth Date</label> <input type="date"
                                                             class="text form-control"
                                                             name="birthDate" value="17/05/1998">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Hire Date</label> <input type="date"
                                                            class="text form-control"
                                                            name="hireDate" value="01/03/2021">
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <label>Address</label> <input type="text"
                                                      class="form-control" name="address"
                                                      placeholder="Address" value="Hue">
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Country</label>
                            <select name="country" class="form-control select2 select2-hidden-accessible" style="width: 100%;" tabindex="-1" aria-hidden="true">
                                <option value="">-- Choise your city --</option>
                                <option value="1">Viet Nam</option>
                                <option value="1">USA</option>
                                <option value="1">UK</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <label>City</label>
                        <select name="city" class="form-control select2 select2-hidden-accessible" style="width: 100%;" tabindex="-1" aria-hidden="true">
                            <option value="">-- Choise your city --</option>
                            <option value="1">Hue</option>
                            <option value="1">Ha Noi</option>
                            <option value="1">Ho Chi Minh</option>
                        </select>
                    </div>
                    <div class="col-sm-12">
                        <label>Home Phone</label> <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-phone"></i></div>
                            <input type="text" class="form-control" name="homePhone" placeholder="8712367126" value="0969861254" required>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label>Notes</label> <input type="text" class="form-control" name="notes" placeholder="notes" value="Nothing" />
                        </div>
                    </div>

                    <div style="padding-left:525px;">
                        <button type="submit" class="btn btn-success mb-3" name="subUpdate">Update</button>
                        <a class="btn btn-danger ml-3 mb-3" style="color: #fff;" data-dismiss="modal">Hủy</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
