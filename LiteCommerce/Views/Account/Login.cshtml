@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>LiteCommerce | Log in</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/Themes/Admin/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Themes/Admin/bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Themes/Admin/dist/css/AdminLTE.min.css">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="#"><b>Lite</b>Commerce</a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Sign in to start your system</p>

            <form action="~/Account/Login" method="post">
                <div class="form-group has-feedback">
                    <input type="email" class="form-control" placeholder="Email" value="@ViewBag.Email" name="email" required>
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input name="pwd" type="password" class="form-control" placeholder="Password" required>
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <p class="text-danger"> @Html.ValidationMessage("")</p>
                    </div>
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>
            <!-- /.social-auth-links -->

            <a data-toggle="modal" data-target="#forgotpwd">I forgot my password</a><br>


        </div>
        <!-- /.login-box-body -->
    </div>
    <div class="modal fade" id="forgotpwd" aria-hidden="true">
        <div class="modal-dialog modal-info">
            <div class="modal-content">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <div class="modal-header">
                    <h2 class="modal-title" id="myModalLabel">Forgot your password?</h2>
                </div>
                <form method="POST" action="~/Account/ForgotPwd">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label style="padding-top:10px;color:white">Please enter your email to reset your password</label> <input type="email"
                                                                                                                                      class="text form-control" placeholder="your e-mail address" required
                                                                                                                                      name="email">
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary mb-5" name="subSend"><div class="fa fa-send"></div> Send</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- /.login-box -->
    <!-- jQuery 3 -->
    <script src="~/Themes/AdminLTE/bower_components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/Themes/AdminLTE/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="~/Themes/AdminLTE/plugins/iCheck/icheck.min.js"></script>
</body>
</html>


