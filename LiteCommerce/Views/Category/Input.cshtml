@model LiteCommerce.DomainModels.Category
@{

}
<div class="box box-primary">
    <div class="box-header">
        <h3 style="float: right;" class="box-title">
            <a class="btn btn-primary mr-3"
               href="~/Category">Back to list >></a>
        </h3>
    </div>
    <div class="row shadow" style="padding-top:10px;">

        <div class="col-sm-12">
            <div>
                <form method="post" action="~/Category/Input">
                    <input type="hidden" name="categoryID" value="@Model.CategoryID" />
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Category Name</label> <input type="text"
                                                                class="text form-control" placeholder="Company name" required
                                                                name="categoryName" value="@Model.CategoryName">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Description</label> <input type="text"
                                                              class="text form-control" placeholder="Company name" required
                                                              name="Description" value="@Model.Description">
                        </div>
                    </div>
                    <div class="form-group " style="float:right;padding-top:10px;padding-right:15px;">
                        <button type="submit" class="btn btn-primary mb-5" name=""><div class="fa fa-save"></div> Save</button>
                        <a href="~/Category" class="btn btn-danger mb-5" name=""><div class="fa fa-remove"></div> Cancel</a>
                    </div>

                </form>
            </div>

        </div>

    </div>
</div>