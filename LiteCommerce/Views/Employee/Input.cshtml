@model LiteCommerce.DomainModels.Employee
<!--Add or edit an employee-->
<div class="box box-primary">
    <div class="box-header">
        <h3 style="float: right;" class="box-title">
            <a class="btn btn-primary "
               href="~/Employee">Back to list >></a>
        </h3>
    </div>
    <div class="col-sm-6"><h3 style="color:forestgreen">@ViewBag.Success</h3></div>
    <div class="row shadow" style="padding-top:10px;">
        <div class="col-sm-12">
            <div>
                <form method="POST" action="~/Employee/input" enctype="multipart/form-data">
                    <input type="hidden" name="employeeID" value="@Model.EmployeeID" />
                    <div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>First Name</label> <input type="text"
                                                                 class="text form-control" placeholder="Firstname" required
                                                                 name="firstName" value="@Model.FirstName">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Last Name</label> <input type="text"
                                                                class="text form-control" placeholder="Last name" required
                                                                name="lastName" value="@Model.LastName">
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Name title </label> <input type="text"
                                                              class="text form-control" placeholder="Ex: Manage person" required
                                                              name="title" value="@Model.Title">
                        </div>
                    </div>
                    <input type="hidden"
                           class="text form-control" placeholder="Photo path"
                           name="photoPath" value="@Model.PhotoPath">
                    <div class="col-sm-6" style="display:flex">
                        <div class="form-group">
                            <label>Photo Path</label> <input type="file" id="my_input_file"
                                                             class="text form-control" placeholder="Photo path"
                                                             name="uploadPhoto">

                        </div>
                        <div>
                            <img class="profile-user-img img-responsive img-circle" id="showThumb" src="~/@Model.PhotoPath" alt="User profile picture">
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label>E-mail</label><i class="text-danger"> @Html.ValidationMessage("")</i>
                            <input type="email"
                                   class="text form-control" placeholder="Ex: abc@gmail.com" required
                                   name="email" value="@Model.Email">
                        </div>
                    </div>

                    <div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Birth Date</label> <input type="date"
                                                                 class="text form-control"
                                                                 name="birthDate" value="@string.Format("{0:yyyy-MM-dd}",Model.BirthDate)">
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Hire Date</label> <input type="date"
                                                            class="text form-control"
                                                            name="hireDate" value="@string.Format("{0:yyyy-MM-dd}",Model.HireDate)">
                        </div>
                    </div>

                    <div>
                        <div class="col-sm-12">
                            <label>Address</label> <input type="text"
                                                          class="form-control" name="address"
                                                          placeholder="Address" value="@Model.Address" required>
                        </div>
                    </div>

                    <div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Country</label>
                                @Html.DropDownListFor(m => m.Country,
                               SelectListHelper.ListOfCountries(),
                               "-------------------------------------------------------- Choice your country ---------------------------------------------------------------",
                               new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <label>City</label>
                            @Html.DropDownListFor(m=>m.City,SelectListHelper.ListOfcities(),
                            "-------------------------------------------------------- Choice your City ---------------------------------------------------------------",
                           new { @class = "form-control form-control-sm" })
                        </div>
                    </div>
                    <div>
                        <div class="col-sm-12">
                            <label>Home Phone</label> <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-globe"></i></div>
                                <input type="text" class="form-control" name="homePhone" placeholder="8712367126" value="@Model.HomePhone" required>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label>Notes</label> <input type="text" class="form-control" name="notes" placeholder="notes" value="@Model.Notes" />
                        </div>
                    </div>

                    <div class="form-group " style="float:right;padding-top:10px;padding-right:15px;">
                        <button type="submit" class="btn btn-primary mb-5" name="subAdd"><div class="fa fa-save"></div> Save</button>
                        <a href="~/Employee" class="btn btn-danger mb-5" name=""><div class="fa fa-remove"></div> Cancel</a>
                    </div>
                </form>
            </div>

        </div>

    </div>
</div>
<i>@Html.ValidationMessage("")</i>
