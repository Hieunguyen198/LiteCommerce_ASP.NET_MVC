<div class="box box-header">
    <form action="~/Order" method="get">
        <div class="input-group input-group-sm">
            <input type="text" class="form-control" placeholder="Search" name="searchValue" value="">
            <span class="input-group-btn">
                <button type="submit" class="btn btn-info btn-flat"><div class="fa fa-search"></div></button>
            </span>
        </div>
    </form>
</div>
<div class="box box-primary">
    <form action="~/Order/Delete" method="post">
        <div class="box-body">
            <h3 style="float: right;" class="box-title">
                <button onclick="return confirm('Do you really want to delete these orders,This action cannot be undone ?')" class="btn btn-danger mr-3"
                        type="submit">
                    Delete orders
                </button>
            </h3>
            <h3 style="float: right; padding-right:5px" class="box-title">
                <a class="btn btn-success mr-3"
                   href="~/Order/Create">Create order</a>
            </h3>
            <!-- /.box-header -->
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="selectAll" /></th>
                        <th>#</th>
                        <th>Customer Name</th>
                        <th>Employee Name</th>
                        <th>Order date</th>
                        <th ></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><input type="checkbox" name="OrderIDs" value="1" /></td>
                        <td>1</td>
                        <td>Hieu Nguyen</td>
                        <td>Dien Nguyen</td>
                        <td>05/03/2021</td>
                        <td></td>
                        <td>
                            <div>
                                <a class="btn btn-info" data-toggle="modal" data-target="#1"><i class="fas fa-info-circle"></i></a>
                                <a onclick="return confirm('Do you really want to delete this order?');"
                                   class="btn btn-danger"><i class="fa fa-remove"></i></a>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td><input type="checkbox" name="OrderIDs" value="1" /></td>
                        <td>2</td>
                        <td>Hieu Nguyen</td>
                        <td>Thuan Nguyen</td>
                        <td>04/03/2021</td>
                        <td></td>
                        <td>
                            <div>
                                <a class="btn btn-info"><i class="fas fa-info-circle"></i></a>
                                <a onclick="return confirm('Do you really want to delete this order?');"
                                   class="btn btn-danger"><i class="fa fa-remove"></i></a>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </form>
    <!-- /.box-body -->
</div>
