@model LiteCommerce.DomainModels.Product
<!-- Add or edit a product-->
<div class="box box-primary">
    <div class="box-header">
        <h3 style="float: right;" class="box-title">
            <a class="btn btn-primary mr-3"
               href="~/Product">Back to list <i class="fa fa-arrow-right"></i></a>
        </h3>
    </div>
    <div class="col-sm-6"><h3 style="color:forestgreen">@ViewBag.Success</h3></div>
    <div class="row shadow" style="padding-top:10px;">
        <div class="col-sm-12">
            <div>
                <form method="POST" action="~/Product/Input" enctype="multipart/form-data">
                    <input class="hidden" name="ProductID" value="@Model.ProductID" />
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Product Name</label> <input type="text"
                                                               class="text form-control" placeholder="Company name" required
                                                               name="productName" value="@Model.ProductName">
                        </div>
                    </div>
                    <div>
                        <input type="hidden"
                               class="text form-control" placeholder="Photo path"
                               name="photoPath" value="@Model.PhotoPath">
                        <div class="col-sm-6" style="display:flex">
                            <div class="form-group">
                                <label>Photo Path</label> <input type="file" id="my_input_file"
                                                                 class="text form-control" placeholder="Photo path"
                                                                 name="uploadPhoto">

                            </div>
                            <div>
                                <img class="profile-user-img img-responsive img-circle" id="showThumb" src="~/@Model.PhotoPath" alt="User profile picture">
                            </div>
                        </div>

                    </div> 
                    <div class="col-sm-6">
                        @Html.Label("Category Name")
                        @Html.DropDownListFor(m => m.CategoryID, SelectListHelper.ListOfCategories(), "Choice Category", new { @class = "form-control" })
                    </div>
                    <div class="col-sm-6">
                        <label>Descriptions</label> <input type="text"
                                                           class="form-control" name="Descriptions"
                                                           placeholder="Description about your product" value="@Model.Descriptions">
                    </div>
                    <div class="col-sm-6">
                        <label>Quantity Per Unit</label> <input type="text"
                                                                class="form-control" name="QuantityPerUnit" placeholder="Quantity Per Unit"
                                                                value="@Model.QuantityPerUnit" required>
                    </div>
                    <div class="col-sm-6">
                        <label>Unit Price</label> <input type="number"
                                                         class="form-control" name="unitPrice"
                                                         value="@Model.UnitPrice" required>
                    </div>

                    <div class="form-group " style="float:right;padding-top:10px;padding-right:15px;">
                        <button type="submit" class="btn btn-primary mb-5" name="subAdd"><div class="fa fa-save"></div> Save</button>
                        <a href="~/Product" class="btn btn-danger mb-5" name="subCancle"><div class="fa fa-remove"></div> Cancel</a>
                    </div>
                </form>
            </div>

        </div>

    </div>
</div>