
@{
    ViewBag.Title = "CHANGE PASSWORD";
    ViewBag.Manage = "Change password";
}
<div class="box box-primary">
    <div class="box-body">
        <div class="information-right-content">
            <form>
                <input type="hidden" id="userID" name="userID" value="1" />
                <div class="col-sm-12">
                    <div class="form-group">
                        <label>Current password</label>
                        <input type="password" class="text form-control" placeholder="Please enter your current password" name="current" id="currentpassword" required>
                        <p class="text-danger" id="resultcurrentpassword"></p>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        <label>New Password</label>
                        <input type="password" class="text form-control" placeholder="Please enter new password" id="newpassword" required>
                        <p class="text-danger" id="resultnewpassword"></p>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        <label>Confirm password</label>
                        <input type="password" class="text form-control" placeholder="Please enter confirm password" id="confirmpassword" required>
                        <p class="text-danger" id="resultconfirmpassword"></p>
                    </div>
                </div>
                <div class="form-group " style="float:right;padding-top:10px;padding-right:15px;">
                    <button class="btn btn-primary mb-5" id="subChange"><div class="fa fa-save"></div> Change</button>
                </div>
            </form>

        </div>
    </div>
</div>