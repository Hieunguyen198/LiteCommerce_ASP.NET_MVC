@model LiteCommerce.Models.CategoryNoPagination
@{
    ViewBag.Title = "MANAGE CATEGORIES";
    ViewBag.SmallTitle = "List, create, edit, delete categories";
    ViewBag.Manage = "Catalog";
    ViewBag.ManageDetail = "Category";
}
<div class="box box-header">
    <form action="~/Category" method="get">
        <div class="input-group input-group-sm">
            <input type="text" class="form-control" placeholder="Enter the category name to search" id="searchValue" name="searchValue">
            <span class="input-group-btn">
                <button id="search" type="button"   class="btn btn-info btn-flat"><div class="fa fa-search"></div></button>
            </span>
        </div>
    </form>
</div>
<div class="box box-primary">
    <form action="~/Category/Deletes" method="post">
        <div class="box-body">
            <h3 style="float: right;" class="box-title">
                <button onclick="return confirm('Do you really want to delete selected categories?')" ; class="btn btn-danger mr-3"
                        type="submit">
                    Delete categories
                </button>
            </h3>
            <h3 style="float: right; padding-right:5px" class="box-title">
                <button class="btn btn-success mr-3" type="button" data-toggle="modal" data-target="#myModal" onclick="clearTextBox(); $('#btnAdd').show();
                $('#btnUpdate').hide();">Add category</button>
            </h3>
            <div style="padding-top:25px;">
            </div>
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="selectAll" /></th>
                        <th>#</th>
                        <th>Category Name</th>
                        <th>Description</th>
                        <th style="text-align: center;">Actions</th>
                    </tr>
                </thead>
                <tbody class="tbody">    
                </tbody>
            </table>
        </div>
    </form>
</div>
<!-- Add Category Modal-->
<div class="modal fade" id="myModal" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <div class="modal-header">
                <h2 class="modal-title" id="myModalLabel">EDIT CATEGORY</h2>

            </div>
            <form method="post" action="~/Category/Add">
                <input  class="form-control" id="CategoryID" placeholder="Id" type="hidden" />
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Category Name</label> <input type="text" id="CategoryName"
                                                            class="text form-control" placeholder="Category Name" required
                                                            name="categoryName">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Descriptions</label> <input type="text" id="Description"
                                                           class="text form-control" placeholder="Descriptions" required
                                                           name="description">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary mb-5" id="btnAdd" onclick="Add();"><i class="fa fa-save"></i> Save</button>
                    <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();"><i class="fa fa-edit"></i>Update</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>