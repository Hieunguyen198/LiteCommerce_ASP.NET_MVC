@{
    WebUserData userData = User.GetUserData();
}
<header class="main-header">
    <!-- Logo -->
    <a class="logo" href="~/Dashboard">
        <!-- mini logo -->
        <span class="logo-mini"><b>AD</b>L</span>
        <span class="logo-lg"><strong>LiteCommerce</strong></span>
    </a>
    <nav class="navbar navbar-static-top">
        <!-- Sidebar toggle button-->
        <a class="sidebar-toggle" role="button" href="#" data-toggle="push-menu">
            <span class="sr-only">Toggle navigation</span>
        </a>
        <!-- Navbar Right Menu -->
        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
                <!-- User Panel Account -->
                <li class="dropdown user user-menu">
                    <a class="dropdown-toggle" href="#" data-toggle="dropdown">
                        <img class="user-image" alt="User Image" src="~/@userData.Photo">
                        <span class="hidden-xs">@userData.FullName</span>
                    </a>
                    <ul class="dropdown-menu">
                        <!-- User image -->
                        <li class="user-header">
                            <img class="img-circle" alt="User Image" src="~/@userData.Photo">
                            <p>
                                @userData.FullName - @userData.Title
                                <small>Member since @string.Format("{0:MMMM-yyyy}", Convert.ToDateTime(userData.HireDate))</small>
                            </p>
                        </li>
                        <!-- /.User image-->
                        <!-- User Panel Menu Footer-->
                        <li class="user-footer">
                            <div class="pull-left">
                                <a class="btn btn-default btn-flat" href="~/Account/Index">Profile</a>
                            </div>
                            <div style="padding-left:5px;" class="pull-left">
                                <a class="btn btn-default btn-flat" href="~/Account/ChangePassword">Change Pwd</a>
                            </div>
                            <div class="pull-right">
                                <a class="btn btn-default btn-flat" href="~/Account/Signout" onclick="return confirm('Do you want to log out of the system?');">Sign out</a>
                            </div>
                        </li>
                        <!-- /.User Panel Menu Footer-->
                    </ul>
                </li>
                <!-- /.User Panel Account-->
            </ul>
        </div>
    </nav>
</header>
